{
  "editor.letterSpacing": 0.05,
  "window.zoomLevel": 1,
  "editor.fontSize": 16,
  "editor.fontWeight": "400",
  "editor.wordWrap": "on",
  "editor.lineNumbers": "relative",
  "editor.fontFamily": "Iosevka",
  "editor.lineHeight": 20,
  // Vim settings
  "editor.cursorBlinking": "solid",
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.overrideCopy": false,
  "vim.autoindent": true,
  "vim.useCtrlKeys": true,
  "vim.enableNeovim": true,
  "vim.hlsearch": true,
  // "vim.foldfix": true,
  "vim.insertModeKeyBindings": [
    {
      "before": [ "k", "j" ],
      "after": [ "<Esc>" ]
    }
  ],
  "vim.leader": "<space>",
  "vim.otherModesKeyBindingsNonRecursive": [
    {
      "before": [ "leader", "/" ],
      "after": [],
      "commands": [ { "command": ":nohl" } ]
    },
    {
      "before": [ "leader", "." ],
      "after": [],
      "commands": [ { "command": "workbench.action.showAllSymbols" } ]
    },
    {
      "before": [ "leader", "l", "r" ],
      "after": [],
      "commands": [ { "command": "editor.action.rename" } ]
    },
    {
      "before": [ "leader", "l", "f" ],
      "after": [],
      "commands": [ { "command": "editor.action.quickFix" } ]
    },
    {
      "before": [ "leader", "f" ],
      "after": [],
      "commands": [ { "command": "workbench.action.findInFiles" } ]
    },
    {
      "before": [ "leader", "w" ],
      "after": [],
      "commands": [ { "command": ":w" } ]
    },
    {
      "before": [ "leader", "q" ],
      "after": [],
      "commands": [ { "command": ":q" } ]
    },
    {
      "before": [ "leader", "m" ],
      "after": [],
      "commands": [ { "command": "editor.action.formatDocument" } ]
    },
    {
      "before": [ "leader", "p" ],
      "after": [],
      "commands": [ { "command": "workbench.action.quickOpen" } ]
    },
    {
      "before": [ "leader", "n" ],
      "after": [],
      "commands": [ { "command": "workbench.action.toggleSidebarVisibility" } ]
    },
    {
      "before": [ "leader", "c", "c" ],
      "after": [ "g", "c", "c" ],
      "commands": []
    },
    {
      "before": [ "<C-j>" ],
      "after": [],
      "commands": [ { "command": "workbench.action.nextEditor" } ]
    },
    {
      "before": [ "<C-k>" ],
      "after": [],
      "commands": [ { "command": "workbench.action.previousEditor" } ]
    },
    {
      "before": [ "<C-d>" ],
      "after": [ "1", "6", "j" ],
      "commands": []
    },
    {
      "before": [ "Y" ],
      "after": [ "y", "$" ],
      "commands": []
    },
    {
      "before": [ "<C-u>" ],
      "after": [ "1", "6", "k" ],
      "commands": []
    },
    {
      "before": [ "z", "v" ],
      "after": [ "z", "o" ]
    },
    {
      "before": [ "U" ],
      "after": [ "<C-r>" ]
    },
    {
      "before": [ "leader", "w" ],
      "after": [],
      "commands": [ { "command": "workbench.action.files.save", "args": [] } ]
    },
    {
      "before": [ "leader", "r" ],
      "after": [],
      "commands": [ { "command": "code-runner.run", "args": [] } ]
    },
    {
      "before": [ ";" ],
      "after": [ ":" ]
    },
    {
      "before": [ "L" ],
      "after": [ "$" ]
    },
    {
      "before": [ "H" ],
      "after": [ "^" ]
    }
  ],
  "workbench.sideBar.location": "right",
  "workbench.statusBar.visible": true,
  "workbench.colorCustomizations": {
    "editorCursor.background": "#062029",
    "editorCursor.foreground": "#839496",
  },
  "editor.autoClosingBrackets": true,
  "workbench.activityBar.visible": false,
  "editor.renderWhitespace": "none",
  "editor.renderControlCharacters": false,
  "workbench.startupEditor": "newUntitledFile",
  "vetur.format.defaultFormatter.js": "vscode-typescript",
  "vetur.format.defaultFormatter.html": "js-beautify-html",
  "prettier.singleQuote": true,
  "prettier.eslintIntegration": true,
  "explorer.openEditors.visible": 0,
  "editor.minimap.enabled": false,
  "editor.acceptSuggestionOnEnter": "off",
  "explorer.confirmDelete": false,
  "latex-workshop.chktex.enabled": false,
  "latex-workshop.view.pdf.viewer": "browser",
  "workbench.statusBar.feedback.visible": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "java.home": "/Library/Java/JavaVirtualMachines/jdk1.8.0_172.jdk/Contents/Home",
  "workbench.editor.enablePreview": false,
  "cSpell.language": "en-GB",
  "cSpell.userWords": [
    "pseudocode"
  ],
  "languageServerHaskell.useCustomHieWrapperPath": "~/hie-wrapper.sh",
  "languageServerHaskell.useHieWrapper": true,
  "workbench.colorTheme": "Braver's Solarized Dark (themed workbench)",
  "workbench.iconTheme": "material-icon-theme"
}
